---
import Layout from '@layouts/Index.astro'
import { getCollection } from 'astro:content'
import Card from '@components/Card.astro'
import * as siteData from '@data/site.json'

export async function getStaticPaths() {
  const allPosts = await getCollection('posts')
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())]

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags.includes(tag)
    )
    return {
      params: { tag },
      props: { posts: filteredPosts }
    }
  })
}

const { tag } = Astro.params
const { posts } = Astro.props
const title = 'Hastagah!'
const bodyClass = ''
const pageDesc = siteData.description
const mainClass = 'container'
const ogImage = '../og_home.jpg'
---

<Layout
  pageDesc={pageDesc}
  pageTitle={title}
  bodyClass={bodyClass}
  mainClass={mainClass}
  ogImage={ogImage}
>
  <h2 class='h3 uppercased centered green'>{tag}</h2>
  <div class='grida'>
    {
      posts.map((post: any) => (
        <a class='card_link' href={`/${post.data.category}/${post.slug}`}>
          <Card title={post.data.title} image={post.data.images[0]} />
        </a>
      ))
    }
  </div>
</Layout>
