---
import { CollectionEntry, getCollection } from 'astro:content'
import Layout from '@layouts/Post.astro'
import Slide from '@components/Slide.astro'
import * as siteData from '@data/site.json'

const category = 'web-design'

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }) => {
    return data.draft !== true && data.category == 'web-design'
  })

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post }
  }))
}

interface Props {
  post: CollectionEntry<'posts'>
}

const { post } = Astro.props
const { Content } = await post.render()
const bodyClass = category
---

<Layout {...post.data}>
  <span slot="header" class="section_name">web-design</span>
  <h1 slot="header">{post.data.title}</h1>
  <ul slot="header" class="tags">
    {
      post.data.tags.map((tag) => {
        return (
          <li>
            <a class="" href={`/${tag}/`}>
              {tag}
            </a>
          </li>
        )
      })
    }
  </ul>
  <div slot="images">
    <!-- <Slide p={frontmatter.images[0].scr} /> -->
  </div>

  <div class="content">
    <Content />
  </div>
  <p slot="footer">SEE MORE</p>
</Layout>

<style lang="scss">
  .tags {
    max-width: none !important;
    li {
      display: inline-block;
      padding-right: 1rem;
      text-transform: uppercase;
    }
  }

  .post_content ul li {
    list-style-type: none !important;
  }
</style>
