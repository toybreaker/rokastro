---
// Define the props that the component accepts
const { videoId } = Astro.props
---

<style>
  .video-container {
    position: relative;
    /* Adjust width and padding-top to maintain a 9:16 aspect ratio for vertical videos */
    width: 100%; /* Adjust this width as needed to fit your design */
    padding-top: 177.77%; /* 16:9 aspect ratio is 56.25%, for 9:16, we use height/width*100 = 177.77% */
  }

  .video-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none; /* Ensure no border */
  }
</style>

<div class='video-container'>
  <iframe
    class='video-iframe'
    src={`https://www.youtube.com/embed/${videoId}`}
    title='YouTube video player'
    allow='clipboard-write; encrypted-media; gyroscope; picture-in-picture'
    allowfullscreen
  >
  </iframe>
</div>
