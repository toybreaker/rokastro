---
import { Image } from 'astro:assets'

export interface Props {
  title: string
  category?: string | undefined
  image: any
}

const { title, image, category } = Astro.props
---

<div class="card">
  <div class="image_box">
    <Image width={640} src={image} alt={title} format="avif" quality="low" />
  </div>
  <h2 class="post_title">{title.toLocaleUpperCase()}</h2>
  <div class="category">{category}</div>
</div>

<style lang="scss">
  .card {
    margin-top: var(--spacing);
    padding: var(--spacing);
  }
  .image_box {
    overflow: hidden;
  }

  h2,
  .category {
    margin: 0;
    padding: 0;
    text-align: center;
    text-transform: uppercase;
  }
  img {
    border-radius: var(--radius);
    width: 100%;
    max-width: 100vw;
    filter: grayscale(100%);
    transition: filter 500ms ease-out, transform 250ms ease-out;
    transform: scale(1.15);
    overflow: hidden;
    will-change: filter, transform;

    &:hover {
      filter: grayscale(0%);
      transform: scale(0.95);
    }
  }
</style>
